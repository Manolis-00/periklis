<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= county.title %></div>
    <div><%= county.demos %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui center rounded image" src="<%= county.image %>">
            <div class="content">
                <span><%= county.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- county.body %></p>
            </div>
            <a class="ui orange inverted button" href="/problems/<%= county._id %>/edit">Επεξεργασία</a>
            <form id="delete" action="/problems/<%= county._id %>?_method=DELETE" method="POST">
                <button class="ui red inverted button">Διαγραφή</button>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>